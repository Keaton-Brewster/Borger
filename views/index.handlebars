<h1>Burgers</h1>

<div class="row">
    <div class="col-6">
        <h2>Burgers that have not been eaten</h2>

        <ul>
            {{#each burgers}}
            {{#unless consumed}}
            {{> individual-burger consumed=false}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="col-6">
        <h2>Burgers that have been eaten</h2>

        <ul>
            {{#each burgers}}
            {{#if consumed}}
            {{> individual-burger consumed=true}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>

<div>
    <h2>Add b u r g e r</h2>
    <form id="create-form">
        <div class="form-group">
            <textarea id="borger-to-add" cols="20" rows="1"></textarea>
        </div>
        <button type="submit" id="add-borger">Add</button>
    </form>
</div>